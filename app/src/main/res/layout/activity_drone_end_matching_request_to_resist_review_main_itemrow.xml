<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

        //RecyclerViewAdapter.java 연관
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/textedge"
            android:weightSum="30">

            //류지 부탁해!!(작성자 ID가 출력되어야 돼)
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:weightSum="10">
                <TextView
                    android:id="@+id/tvItem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="(작성자 ID, DB로)"
                    android:fontFamily="@font/bmjua"
                    android:gravity="center_vertical"
                    android:paddingLeft="7dp"
                    android:textColor="@android:color/black"
                    android:textSize="14dp"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:weightSum="10">
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:weightSum="10">

                //류지 부탁해!! 자신이 작성했던 평점을 별로 표시해야 해
                <RatingBar
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.5"
                    android:fontFamily="@font/bmjua"
                    android:gravity="center_vertical"
                    android:paddingLeft="2dp"
                    android:textColor="@android:color/darker_gray"
                    style="?android:attr/ratingBarStyleSmall" />

                //류지 부탁해!! java로 작성일자 출력해야 돼
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:text="0000-00-00-00:00(Java)"
                    android:fontFamily="@font/bmjua"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="9dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16.5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:textColor="@android:color/black"
                    android:text="리뷰 작성한 글 받아와야 돼"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.5"
                android:weightSum="10">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5">
                </FrameLayout>

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@android:color/white"
                    android:src="@drawable/review_good"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="좋아요 수"
                    android:gravity="center|center"
                    android:textsize="3dp"/>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                </FrameLayout>

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:scaleType="fitXY"
                    android:background="@android:color/darker_gray"
                    android:src="@drawable/review_bad" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="싫어요 수"
                    android:gravity="center|center"
                    android:textColor="@android:color/darker_gray"
                    android:textsize="3dp"/>

            </LinearLayout>

        </LinearLayout>
</android.support.v7.widget.CardView>