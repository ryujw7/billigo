<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:weightSum="10"
    >

    <TextView
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/bmjua"
        android:gravity="center"
        android:text="빌리고"
        android:textColor="@android:color/black"
        android:textSize="30pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="20">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="11"
            android:orientation="vertical"
            android:weightSum="2">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textedge"
                android:textSize="10pt"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:paddingLeft="5pt"
                android:paddingRight="5pt"
                android:hint="  아이디"
            />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:background="@drawable/textedge"
                android:textStyle="bold"
                android:textSize="10pt"
                android:inputType="textPassword"
                android:paddingLeft="5pt"
                android:paddingRight="5pt"
                android:hint="  비밀번호"
                />
        </LinearLayout>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:text="로그인"
            android:id="@+id/loginbutton"
            android:gravity="center_vertical"
            android:fontFamily="@font/bmjua"
            android:textAlignment="center"
            android:textSize="15pt"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:background="@drawable/textradiusedge"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="20">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18"
            android:id="@+id/registerbuton"
            android:text="회원가입"
            android:fontFamily="@font/bmjua"
            android:textSize="15pt"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:background="@drawable/textradiusedge"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="20">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/searchaccount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18"
            android:background="@drawable/textradiusedge"
            android:fontFamily="@font/bmjua"
            android:text="아이디/비밀번호 찾기"
            android:textColor="@android:color/black"
            android:textSize="15pt"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="20">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18"
            android:background="@drawable/naverloginbutton"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/underbanner"/>
    </LinearLayout>
</LinearLayout>